<launch>
    <arg name="namespace_prefix" default="ur10_d435_handeyecalibration" />

    <arg name="robot_ip" doc="The IP address of the UR10" />

    <arg name="marker_size" value="0.100" doc="0.100" />
    <arg name="marker_id" value="582" doc="582" />


    <!-- start ArUco -->
    <node name="aruco_tracker" pkg="aruco_ros" type="single">
        <remap from="/camera_info" to="/camera/infra1/camera_info" />
        <remap from="/image" to="/camera/infra1/image_rect_raw" />
        <param name="image_is_rectified" value="true"/>
        <param name="marker_size"        value="$(arg marker_size)"/>
        <param name="marker_id"          value="$(arg marker_id)"/>
        <param name="reference_frame"    value="base_link"/>
        <param name="camera_frame"       value="camera_link"/>
        <param name="marker_frame"       value="ar_marker" />
    </node>

    <!-- start the robot -->
    <include file="$(find ur_robot_driver)/launch/ur10_bringup.launch">
        <arg name="limited" value="true" /> 
        <arg name="robot_ip" value="192.168.0.10" /> 
    </include> 
    <include file="$(find myrobot_moveit_config)/launch/myrobot_planning_execution.launch">
        <!-- <arg name="limited" value="true" /> -->
    </include>


    <include file="$(find realsense2_camera)/launch/rs_camera.launch" >
       <!-- <arg name="depth_registration" value="true" /> -->
    </include>

   <!-- <include file="$(find handeye_calib_camodocal)/launch/handeye_file.launch" >
    </include> -->


    <!-- start easy_handeye -->
    <include file="$(find easy_handeye)/launch/calibrate.launch" >
        <arg name="namespace_prefix" value="$(arg namespace_prefix)" />
        <arg name="eye_on_hand" value="true" />

        <arg name="tracking_base_frame" value="camera_link" />
        <arg name="tracking_marker_frame" value="ar_marker" />
        <arg name="robot_base_frame" value="base_link" />
        <arg name="robot_effector_frame" value="ee_link" />

        <arg name="freehand_robot_movement" value="true" />
        <arg name="robot_velocity_scaling" value="0.5" />
        <arg name="robot_acceleration_scaling" value="0.5" />
    </include>  

</launch>
